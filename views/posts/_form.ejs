<div class="row">
    <div class="col-2">
        <button type="submit" class="btn btn-outline-primary btn-sm">Save</button>
        <a href="/" class="btn btn-outline-secondary btn-sm">Cancel</a>
    </div>
    <div class="col-10">
        <div class="form-group">
            <label for="title">Title</label>
            <input required value="<%= post.title%>" type="text" name="title" id="title" class="form-control">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea  name="description" id="description" class="form-control"><%= post.description %></textarea>
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea required name="content" id="content" class="form-control"><%= post.content %></textarea>
        </div>
    </div>
  </div>